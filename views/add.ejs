<script>
    $(document).ready(function() {
      $('#mpesaPaymentForm').on('submit', function(e) {
        e.preventDefault(); // Prevent the form from submitting normally
        var phoneNumber = $('#mpesaPhoneNumber').val(); // Get the entered phone number
        $('#mpesaPaymentModal').modal('hide'); // Hide the modal
        
        // Here you'd typically make an AJAX call to your server to process the payment
        console.log("Processing M-Pesa payment for:", phoneNumber); // For demonstration
        alert("Processing transaction... This may take a moment.");
        
        // Simulate a delay for processing, then confirm payment (for demo purposes)
        setTimeout(function() {
          alert("Transaction Complete!");
        }, 3000); // Adjust time as needed
      });
    });
